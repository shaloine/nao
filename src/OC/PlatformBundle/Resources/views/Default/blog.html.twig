{# src/OC/PlatformBundle/Resources/views/Default/blog.html.twig #}
{% extends "OCPlatformBundle::layout.html.twig" %}


{% block body %}

	{% for article in articles|reverse %}
		<h3>{{ article.title }}</h3>
		{% if article.articlePicture is not null %}
		<img src="{{  asset('uploads/articlesPictures/'~article.articlePicture.path) }}" alt="{{ article.articlePicture.alt }}"/>
		{% endif %}
		<p>{{ article.content|raw }}</p>
		<p><a href="{{ path('oc_platform_article', { 'id': article.id }) }}">Aper√ßu</a></p>
	{% endfor %}

{% endblock %}



